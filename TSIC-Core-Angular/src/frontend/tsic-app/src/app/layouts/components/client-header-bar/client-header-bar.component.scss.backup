:host {
    display: block;
    background:
        linear-gradient(135deg,
            rgba(var(--brand-primary-rgb, 56, 189, 248), 0.03) 0%,
            transparent 25%,
            transparent 75%,
            rgba(var(--brand-secondary-rgb, 16, 185, 129), 0.02) 100%),
        linear-gradient(45deg,
            var(--brand-bg) 0%,
            var(--brand-bg-secondary) 100%);
    width: 100%;
    min-height: 60px; // Component-specific: fixed header height
    border-bottom: 1px solid var(--brand-border);
    backdrop-filter: blur(20px) saturate(180%);
    position: relative;
    overflow: hidden;

    // Enhanced modern glass surface overlay with subtle pattern
    &::before {
        content: '';
        position: absolute;
        inset: 0;
        background:
            radial-gradient(ellipse at 20% 50%, rgba(var(--brand-primary-rgb), 0.04) 0%, transparent 50%),
            radial-gradient(ellipse at 80% 20%, rgba(var(--brand-secondary-rgb), 0.03) 0%, transparent 50%),
            linear-gradient(180deg, rgba(var(--neutral-0-rgb), 0.05) 0%, rgba(var(--neutral-0-rgb), 0.01) 100%);
        pointer-events: none;
        z-index: 0;
    }

    // Subtle animated shimmer effect
    &::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg,
                transparent 0%,
                rgba(var(--neutral-0-rgb), 0.03) 50%,
                transparent 100%);
        animation: shimmer 8s ease-in-out infinite;
        pointer-events: none;
        z-index: 1;
    }

    // Mobile: only bottom border
    @media (max-width: 767.98px) {
        border: none;
        border-bottom: 1px solid var(--brand-border);
        min-height: 70px; // Component-specific: slightly taller for mobile touch targets
    }
}

// Shimmer animation
@keyframes shimmer {
    0% {
        left: -100%;
    }

    50% {
        left: 100%;
    }

    100% {
        left: 100%;
    }
}

// Modern TSIC Logo Container - Enhanced for Logo Background Issues
.tsic-brand-box {
    background:
        linear-gradient(135deg, rgba(var(--neutral-0-rgb), 0.98), rgba(var(--neutral-0-rgb), 0.9)),
        rgba(var(--neutral-0-rgb), 0.95);
    border: 1px solid rgba(var(--neutral-0-rgb), 0.3);
    border-radius: var(--radius-lg);
    padding: var(--space-2) var(--space-3);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-shadow:
        var(--shadow-lg),
        inset 0 1px 0 rgba(var(--neutral-0-rgb), 0.7);
    backdrop-filter: blur(10px) saturate(180%);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    z-index: 1;
    overflow: hidden;

    // Enhanced background support for logo transparency/background issues
    &::before {
        content: '';
        position: absolute;
        inset: 0;
        background:
            radial-gradient(ellipse at center, rgba(var(--neutral-0-rgb), 0.95) 20%, rgba(var(--neutral-0-rgb), 0.7) 70%, transparent),
            linear-gradient(145deg, rgba(var(--neutral-0-rgb), 0.9), rgba(var(--neutral-0-rgb), 0.7));
        opacity: 0.9;
        z-index: -1;
        border-radius: inherit;
    }

    &:hover {
        transform: translateY(-1px);
        background:
            linear-gradient(135deg, rgba(var(--neutral-0-rgb), 1), rgba(var(--neutral-0-rgb), 0.95)),
            rgba(var(--neutral-0-rgb), 0.98);
        border-color: rgba(var(--brand-primary-rgb), 0.4);
        box-shadow:
            var(--shadow-xl),
            inset 0 1px 0 rgba(var(--neutral-0-rgb), 0.9);

        &::before {
            opacity: 1;
            background:
                radial-gradient(ellipse at center, rgba(var(--neutral-0-rgb), 1) 30%, rgba(var(--neutral-0-rgb), 0.85) 80%, transparent),
                linear-gradient(145deg, rgba(var(--neutral-0-rgb), 0.95), rgba(var(--neutral-0-rgb), 0.8));
        }
    }
}

.tsic-logo {
    height: var(--space-8); // Component-specific: logo height
    width: auto;
    object-fit: contain;
    display: block;
    filter: drop-shadow(var(--shadow-sm));
}

// Modern Job Logo Container - Enhanced for Logo Background Issues
.job-logo-box {
