    align-items: center;
    justify-content: center;
    box-shadow:
        var(--shadow-md),
        inset 0 1px 0 rgba(var(--neutral-0-rgb), 0.5);
    backdrop-filter: blur(8px) saturate(160%);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    z-index: 1;
    overflow: hidden;

    // Enhanced background support for job logo transparency/background issues
    &::before {
        content: '';
        position: absolute;
        inset: 0;
        background:
            radial-gradient(ellipse at center, rgba(var(--neutral-0-rgb), 0.9) 25%, rgba(var(--neutral-0-rgb), 0.6) 75%, transparent),
            linear-gradient(140deg, rgba(var(--neutral-0-rgb), 0.85), rgba(var(--neutral-0-rgb), 0.65));
        opacity: 0.8;
        z-index: -1;
        border-radius: inherit;
    }

    &:hover {
        transform: translateY(-1px);
        background:
            linear-gradient(135deg, rgba(var(--neutral-0-rgb), 0.98), rgba(var(--neutral-0-rgb), 0.9)),
            rgba(var(--neutral-0-rgb), 0.95);
        border-color: rgba(var(--brand-primary-rgb), 0.3);
        box-shadow:
            var(--shadow-lg),
            inset 0 1px 0 rgba(var(--neutral-0-rgb), 0.6);

        &::before {
            opacity: 1;
            background:
                radial-gradient(ellipse at center, rgba(var(--neutral-0-rgb), 0.95) 30%, rgba(var(--neutral-0-rgb), 0.75) 80%, transparent),
                linear-gradient(140deg, rgba(var(--neutral-0-rgb), 0.9), rgba(var(--neutral-0-rgb), 0.75));
        }
    }
}

.job-logo {
    height: var(--space-9); // Component-specific: job logo height
    width: auto;
    object-fit: contain;
    display: block;
    max-width: 180px; // Component-specific: prevent oversized logos
    filter: drop-shadow(var(--shadow-sm));
}

// Contemporary Job Name Button
.job-name-button {
    background: rgba(var(--brand-text-rgb), 0.06);
    border: 1px solid rgba(var(--brand-text-rgb), 0.12);
    border-radius: var(--radius-md);
    padding: var(--space-2\.5) var(--space-4);
    font-size: calc(var(--font-size-base) * 0.9375);
    font-weight: var(--font-weight-semibold);
    line-height: 1.4;
    color: var(--brand-text);
    cursor: pointer;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    white-space: normal;
    word-wrap: break-word;
    max-width: 400px; // Component-specific: prevent overflow
    min-height: 44px; // Component-specific: touch target size
    height: auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 1;

    &:hover {
        background: rgba(var(--brand-text-rgb), 0.1);
        border-color: rgba(var(--brand-text-rgb), 0.2);
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }

    &:active {
        transform: translateY(0);
    }
}

// Mobile Styles - Modern Approach
.mobile-logo-group {
    .btn {
        background: rgba(var(--neutral-0-rgb), 0.9);
        border: 1px solid rgba(var(--neutral-0-rgb), 0.2);
        border-radius: var(--radius-sm);
        padding: calc(var(--space-1) + var(--space-0\.5)) calc(var(--space-2) + var(--space-0\.5)) !important;
        backdrop-filter: blur(8px);
        transition: all 0.2s ease;

        &:hover {
            background: rgba(var(--neutral-0-rgb), 0.95);
            transform: translateY(-1px);
        }
    }
}

// Modern Hamburger Button - Mobile Touch Optimized
.hamburger-btn {
    background:
        linear-gradient(135deg, rgba(var(--neutral-0-rgb), 0.95), rgba(var(--neutral-0-rgb), 0.85)),
        rgba(var(--neutral-0-rgb), 0.9);
    border: 1px solid rgba(var(--brand-primary-rgb), 0.15);
    border-radius: var(--radius-md);
    color: var(--brand-text) !important;
    backdrop-filter: blur(12px) saturate(150%);
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
    padding: calc(var(--space-1) + var(--space-0\.5)) calc(var(--space-2) + var(--space-0\.5)) !important; // Match btn-sm sizing
    box-shadow:
        var(--shadow-sm),
        inset 0 1px 0 rgba(var(--neutral-0-rgb), 0.2);

    // Touch feedback - active state for mobile taps
    &:active {
        background:
            linear-gradient(135deg, rgba(var(--neutral-0-rgb), 0.85), rgba(var(--neutral-0-rgb), 0.75)),
            rgba(var(--neutral-0-rgb), 0.8);
        border-color: rgba(var(--brand-primary-rgb), 0.25);
        transform: scale(0.98);
        box-shadow:
            var(--shadow-xs),
            inset 0 1px 0 rgba(var(--neutral-0-rgb), 0.1);
    }

    &:focus,
    &:focus-visible {
        box-shadow:
            0 0 0 0.2rem rgba(var(--brand-primary-rgb), 0.25),
            var(--shadow-sm),
            inset 0 1px 0 rgba(var(--neutral-0-rgb), 0.2);
        outline: none;
        border-color: rgba(var(--brand-primary-rgb), 0.3);
        color: var(--brand-text) !important;
    }

    // Hamburger icon styling - size to match action buttons
    .bi {
        font-size: var(--font-size-base); // Match action button icon size
        font-weight: var(--font-weight-semibold);
        color: inherit;
        filter: drop-shadow(var(--shadow-xs));
    }
}

.btn-group {
    .btn-sm {
        padding: calc(var(--space-1) + var(--space-0\.5)) calc(var(--space-2) + var(--space-0\.5));
        font-size: var(--font-size-sm);
        backdrop-filter: blur(8px);
    }
}

.mobile-logo {
    height: var(--space-6\.5); // Component-specific: mobile logo height
    width: auto;
    display: block;
    filter: drop-shadow(var(--shadow-sm));
}

