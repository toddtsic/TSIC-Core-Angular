{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome (Angular)",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:4200",
      "webRoot": "${workspaceFolder}/TSIC-Core-Angular/src/frontend/tsic-app",
      "preLaunchTask": "npm: start (Angular UI)"
    },
    {
      "name": "Launch API (dotnet)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: run (API)",
      "program": "${workspaceFolder}/TSIC-Core-Angular/src/backend/TSIC.API/bin/Debug/net9.0/TSIC.API.dll",
      "cwd": "${workspaceFolder}/TSIC-Core-Angular/src/backend/TSIC.API",
      "stopAtEntry": false
    },
    {
      "name": "Launch API (debug https)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/TSIC-Core-Angular/src/backend/TSIC.API/bin/Debug/net9.0/TSIC.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/TSIC-Core-Angular/src/backend/TSIC.API",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7215;http://localhost:5022"
      }
    },
    {
      "name": ".NET API: Launch & Debug",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/TSIC-Core-Angular/src/backend/TSIC.API/bin/Debug/net9.0/TSIC.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/TSIC-Core-Angular/src/backend/TSIC.API",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "Angular UI: Chrome Debug",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:4200",
      "webRoot": "${workspaceFolder}/TSIC-Core-Angular/src/frontend/tsic-app/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///./src/*": "${webRoot}/*",
        "webpack:///*": "*"
      },
      "preLaunchTask": "npm: start (Angular UI)"
    }
    ,
    {
      "name": "Attach to running API",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: API & Angular",
      "configurations": ["Launch Chrome (Angular)", "Launch API (dotnet)"],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    }
    ,
    {
      "name": "Launch API + Frontend (https)",
      "configurations": ["Launch API (debug https)", "Launch Chrome (Angular)"],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 2
      }
    }
    ,
    {
      "name": "Attach API + Frontend",
      "configurations": ["Attach to running API", "Launch Chrome (Angular)"]
    }
  ]
}
