{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"TSIC-Core-Angular.sln"
			],
			"options": {
				"cwd": "${workspaceFolder}/TSIC-Core-Angular"
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "dotnet: run (API)",
			"type": "shell",
			"command": "dotnet watch run --project TSIC-Core-Angular/src/backend/TSIC.API/TSIC.API.csproj --launch-profile https --non-interactive",
			"problemMatcher": "$msCompile",
			"isBackground": true
		},
		{
			"label": "Swagger: wait",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/fetch-swagger.ps1"
			],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Generate Angular API Models",
			"type": "npm",
			"script": "generate:api",
			"options": {
				"cwd": "${workspaceFolder}/TSIC-Core-Angular/src/frontend/tsic-app"
			},
			"problemMatcher": []
		},
		{
			"label": "Build Angular UI (one-off)",
			"type": "shell",
			"command": "npm run build",
			"options": {
				"cwd": "${workspaceFolder}/TSIC-Core-Angular/src/frontend/tsic-app"
			},
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Refresh Angular API models (one-click)",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Swagger: wait",
				"Generate Angular API Models",
				"Build Angular UI (one-off)"
			],
			"problemMatcher": []
		},
		{
			"label": "Wait API then Start Angular",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Swagger: wait",
				"Start Angular Dev Server"
			],
			"problemMatcher": []
		},
		{
			"label": "Build, Wait API then Start Angular",
			"dependsOrder": "sequence",
			"dependsOn": [
				"build",
				"Swagger: wait",
				"Start Angular Dev Server"
			],
			"problemMatcher": []
		},
		{
			"label": "Start Angular Dev Server",
			"type": "npm",
			"script": "start",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/TSIC-Core-Angular/src/frontend/tsic-app"
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": {
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Initial Chunk Files",
					"endsPattern": "Application bundle generation complete|Compiled successfully"
				}
			},
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "curl-uslax-probe",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-Command",
				"$ErrorActionPreference = 'SilentlyContinue'; try { Invoke-WebRequest -UseBasicParsing -Uri http://localhost:5000/api/validation/uslax?number=000000000001 | Select-Object -ExpandProperty Content | Write-Output } catch { Write-Output 'probe failed' }"
			],
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "tsic build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"TSIC-Core-Angular.sln"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "Build Angular UI (one-off)",
			"type": "shell",
			"command": "npm",
			"args": [
